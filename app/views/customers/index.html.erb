<div class="panel panel-default">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<tr>
					<th>Full Name</th>
					<th>IC</th>
					<th>Phone</th>
					<th>Rewards $</th>
					<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.full_name %></td>
					<td><%= customer.ic %></td>
					<td><%= customer.phone_number %></td>
					<td><%= customer.rewards||0 %> $</td>
					<td><%= link_to 'Edit', edit_customer_path(customer) %> | <%= link_to 'Remove', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<div class="panel-body">
			<%= paginate @customers%>
		</div>
	</div>
</div>

<%= link_to 'New Customer', new_customer_path, :class => "btn btn-success btn-lg active" %>
