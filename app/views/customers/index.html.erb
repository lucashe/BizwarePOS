<div class="panel panel-default">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<tr>
					<th>Full Name</th>

				</tr>
			</thead>

			<tbody>
				<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.last_name + "," + customer.first_name %></td>

					<td><%= link_to 'Edit', edit_customer_path(customer) %> | <%= link_to 'Remove', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<div class="panel-body">
			<%= will_paginate @customers, renderer: BootstrapPagination::Rails %>
		</div>
	</div>
</div>
</div>

<%= link_to 'New Customer', new_customer_path, :class => "btn btn-success btn-lg active" %>
