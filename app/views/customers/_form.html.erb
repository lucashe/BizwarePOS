<div class="panel panel-default">
	<div class="panel-heading">
		Customer Details
	</div>
	<div class="panel-body">
		<%= form_for(@customer) do |f| %>
		<%= render :partial => 'template/form_errors', :object => @customer %>

		<div class="row">

			<div class="col-sm-6">
				<div class="form-group">
					<label>First Name</label>
					<%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name" %>
				</div>
			</div>

			<div class="col-sm-6">
				<div class="form-group">
					<label>Last Name</label>
					<%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name" %>
				</div>
			</div>
		</div>

		<div class="row">

			<div class="col-sm-6">
				<div class="form-group">
					<label>IC Number</label>
					<%= f.text_field :ic, :class => "form-control", :placeholder => "IC Number" %>
				</div>
			</div>

			<div class="col-sm-6">
				<div class="form-group">
					<label>Phone Number</label>
					<%= f.text_field :phone_number, :class => "form-control", :placeholder => "Phone Number" %>
				</div>
			</div>
		</div>
		<div class="row">

			<div class="col-sm-6">
				<div class="form-group">
					<label>Email Address</label>
					<%= f.text_field :email_address, :class => "form-control", :id =>  "exampleInputEmail1", :placeholder => "Email Address" %>
				</div>
			</div>
		</div>
		<div class="row">

			<div class="col-sm-6">
				<div class="form-group">
					<label>Address</label>
					<%= f.text_field :address, :class => "form-control", :placeholder => "Address" %>
				</div>
			</div>

			<div class="col-sm-6">
				<div class="form-group">
					<label>City</label>
					<%= f.text_field :city, :class => "form-control", :placeholder => "City", :value => "Singapore" %>
				</div>
			</div>
		</div>
		<div class="row">

			<div class="col-sm-6">
				<div class="form-group">
					<label>State</label>
					<%= f.text_field :state, :class => "form-control", :placeholder => "State", :value => "Singapore" %>
				</div>
			</div>

			<div class="col-sm-6">
				<div class="form-group">
					<label>Zip</label>
					<%= f.text_field :zip, :class => "form-control", :placeholder => "Zip" %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-12">
				<%if action_name=='new'%>
				<%= f.submit 'Create Customer', :class => "btn btn-success btn-lg" %>
				<%else%>
				<%= f.submit 'Update Customer', :class => "btn btn-success btn-lg" %>
				<%end%>
			</div>
		</div>
		<% end %>
	</div>
</div>
