<h4 class="text-primary"><span class="glyphicon glyphicon-tags"></span> Customers</h4>
<hr />
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th>Full Name</th>
				<th>IC</th>
				<th>Phone</th>
				<th>Add to Order</th>
			</tr>
		</thead>

		<tbody>
			<% unless @available_customers.blank? %>
			<% for customer in @available_customers %>
			<tr>
				<td><%= customer.full_name %></td>
				<td><%= customer.ic %></td>
				<td><%= customer.phone_number %></td>
				<td class="add_to_current_sale"><%= link_to url_for(:controller => 'sales', :action => 'create_customer_association', :customer_id => customer.id, :sale_id => @sale.id), :remote => true do %>
				<p>
					<span class="glyphicon glyphicon-plus"></span>
				</p><% end %></td>
			</tr>
			<% end %>
			<% end %>
		</tbody>
	</table>
</div>
