<!-- <h4 class="text-primary"><span class="glyphicon glyphicon-tags"></span> Searched Items</h4> -->

<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover table-word-wrap">
		<thead>
			<tr>
				<th>Item</th>
				<th>Price</th>
				<th>Add</th>
			</tr>
		</thead>

		<tbody>
			<% unless @available_items.blank? %>
			<% for item in @available_items %>
			<tr>
				<!-- <td><%= item.sku %></td> -->
				<td><%= item.name %></td>
				<td><%= number_to_currency(item.price) %></td>
				<td class="add_to_current_sale"><%= link_to url_for(:controller => 'sales', :action => 'create_line_item', :item_id => item.id, :sale_id => @sale.id, :quantity => 1, :branch_id => @current_branch_id), :remote => true do %> 
			    <button class="btn btn-sm btn-success glyphicon glyphicon-plus"></button><!-- <span class="glyphicon glyphicon-plus"></span> --> <% end %></td>
			</tr>
			<% end %>
			<% end %>
		</tbody>
	</table>
</div>

