<% unless @sale.customer.blank? %> <h4 class="text-primary"><span class="glyphicon glyphicon-user"></span> Customer </h4>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th>Full Name</th>
				<th>IC</th>
				<th>Phone</th>
				<th>Rewards $</th>
			</tr>
		</thead>

		<tbody>
			<%= fields_for @sale do |f|%>
			<%= f.fields_for :customer, Customer.find(@sale.customer.id) do |e| %>
			<tr>
				<td><%= e.text_field :full_name, :class => "form-control", :placeholder => "Full Name", :readonly => true %></td>
				<td><%= e.text_field :ic, :class => "form-control", :placeholder => "IC", :readonly => true %></td>
				<td><%= e.text_field :phone_number, :class => "form-control", :placeholder => "Phone Number", :readonly => true %></td>
				<td><%= e.text_field :rewards, :class => "form-control", :placeholder => "Rewards $", :readonly => true %></td>
			</tr>
			<% end %>
			<% end %>
		</tbody>
	</table>
</div>

<% end %>