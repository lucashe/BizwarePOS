<div class="panel panel-default">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<tr>
					<th>User Name</th>
					<th>Email Address</th>
					<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= user.username %></td>
					<td><%= user.email %></td>
					<td><%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= will_paginate @users %>
	</div>
</div>
</div>

<div class="col-sm-12">

	<%if current_user.is? :superadmin%>
	<%= link_to 'New StoreMgr',new_store_users_path, :class => "btn btn-success btn-lg" %>
	<%end%>
	<%if current_user.is? :storeadmin%>
	<%= link_to 'New BranchMgr',new_branch_admin_users_path, :class => "btn btn-success btn-lg" %>
	<%end%>
	<%if current_user.is? :branchadmin%>
	<%= link_to 'New Staff',new_staff_users_path, :class => "btn btn-success btn-lg" %>
	<%end%>
</div>

