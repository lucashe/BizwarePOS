<div class="panel panel-default">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<tr>
					<th>Store Name</th>
					<th>Branch Name</th>
					<th>Branch Description</th>
					<th>Address</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @branches.each do |branch| %>
				<tr>
					<td><%= branch.store.store_name%></td>
					<td><%= branch.branch_name%></td>
					<td><%= branch.branch_description%></td>
					<td><%= branch.addr_building%></td>
					<td> <%= link_to 'Edit', edit_branch_path(branch)%>
					| <%= link_to 'Remove', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<div class="panel-body">
			<%= will_paginate @store_branches, renderer: BootstrapPagination::Rails %>
		</div>
	</div>
</div>

<div class="col-sm-12">
	<%= link_to 'New Branch', new_branch_path, :class => "btn btn-success btn-lg active" %>
</div>
