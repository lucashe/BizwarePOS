<%= simple_form_for @item, :html => {:multipart => true} do |f| %>
<%= render :partial => 'template/form_errors', :object => @item %>

<div class="panel panel-default">

	<div class="panel-body">

		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label>Branches</label>
					<%= f.association :store_branches,
					label: "",
					collection: @current_store.store_branches,
					label_method: :branch_name,
					value_method: :id,
					as: :check_boxes
					%>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label>Category</label>
					<%= f.collection_select :item_category_id, ItemCategory.all, :id, :name, {prompt: "Select a category"}, {class: "form-control"}  %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label>SKU</label>
					<%= f.text_field :sku, :class => "form-control", :placeholder => "Item Sku" %>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label>Name of Item</label>
					<%= f.text_field :name, :class => "form-control", :placeholder => "Item Name" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label>Price</label>
					<%= f.text_field :price, :class => "form-control", :placeholder => "Item Price" %>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label>Stock Amount</label>
					<%= f.text_field :stock_amount, :class => "form-control", :placeholder => "Amount in Stock" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label>Cost Price</label>
					<%= f.text_field :cost_price, :class => "form-control", :placeholder => "Cost of Item" %>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label>Description</label>
					<%= f.text_area :description, :class => "form-control", :placeholder => "Item Description" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-2">
				<label>Picture</label>
				<%= image_tag(@item.image_url(:thumbnail), class: "img-thumbnail")if @item.image? %>
				<%= f.file_field :image %>
				<%= f.hidden_field :image_cache %>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<%if action_name=='new'%>
		<%= f.submit 'Create Item', :class => "btn btn-success btn-lg" %>
		<%else%>
		<%= f.submit 'Update Item', :class => "btn btn-success btn-lg" %>
		<%end%>
	</div>
</div>
<% end %>
