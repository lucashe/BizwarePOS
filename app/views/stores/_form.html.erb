<%= form_for(@store)  do |f| %>

<div class="panel panel-default">
	<div class="panel-body">
		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label>Store Name</label>
					<%= f.text_field :store_name, :class => "form-control", :placeholder => "Name of store" %>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label>Store Description</label>
					<%= f.text_area :store_description, :class => "form-control", :placeholder => "Description of store" %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label>Tax Rate (%)</label>
					<%= f.text_field :tax_rate, :class => "form-control", :placeholder => "7",:value => "7"  %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label>Member Discount (%)</label>
					<%= f.text_field :member_discount, :class => "form-control", :placeholder => "0" %>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label>Member Reward (%)</label>
					<%= f.text_field :member_reward, :class => "form-control", :placeholder => "0" %>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<%if action_name=='new'%>
		<%= f.submit 'Create Store', :class => "btn btn-success btn-lg" %>
		<%else%>
		<%= f.submit 'Update Store', :class => "btn btn-success btn-lg" %>
		<%end%>
	</div>
</div>

<% end %>
